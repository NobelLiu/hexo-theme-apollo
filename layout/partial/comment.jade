if theme.disqus
    a.comments(onclick="loadComments()")!= __('comments')
    #disqus_thread
    script.
        var disqus_shortname = '#{theme.disqus}';
        var disqus_identifier = '#{page.path}';
        var disqus_title = '#{page.title}';
        var disqus_url = '#{config.url}/#{page.path}';
        function loadComments() {
            document.getElementsByClassName("comments")[0].style.display = 'none';
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        };
    script(id='dsq-count-scr' src='//#{theme.disqus}.disqus.com/count.js' async)